{
  "name": "erlang-b-calculator",
  "version": "1.0.0",
  "description": "A simple erlang-b calculator",
  "author": "Thiago Santos",
  "scripts": {
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run lint && npm run test",
    "test": "tape -r babel-register src/js/**/*.spec.js | faucet",
    "test:coverage": "nyc npm test",
    "lint:js": "xo src/js/**/*.js test/**/*.js --no-semicolon --esnext --space --global=document --global=window --global=navigator",
    "lint:styl": "stylint ./src/styl/ -c .stylintrc",
    "lint": "npm run lint:js && npm run lint:styl",
    "build:js": "rollup -c",
    "build:styl": "stylus -c -u rupture -u poststylus --with \"['autoprefixer', 'css-mqpacker']\" src/styl/main.styl -o dist/css",
    "build:img": "imagemin ./src/img/**/* --out-dir=./dist/img --plugin=pngquant --plugin=optipng --plugin=zopfli --plugin=jpeg-recompress --plugin=jpegoptim --plugin=mozjpeg --plugin=svgo",
    "build": "npm run build:img && npm run build:styl && npm run build:js",
    "watch": "run-p -cl watch:img watch:js watch:styl serve watch:test",
    "watch:test": "tape-watch -r babel-register src/js/**/*.spec.js -p faucet",
    "watch:js": "rollup -c -w",
    "watch:styl": "stylus -c -u rupture -u poststylus --with \"['autoprefixer', 'css-mqpacker']\" src/styl/main.styl -o dist/css -w",
    "serve": "browser-sync start -s --files \"dist/css/**/*, **/*.html\"",
    "reporter:css": "parker dist/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiamsantos/borg-boilerplate.git"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-core": "^6.17.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.16.3",
    "browser-env": "^2.0.11",
    "browser-sync": "^2.17.1",
    "css-mqpacker": "^5.0.1",
    "faucet": "0.0.1",
    "husky": "^0.11.8",
    "npm-run-all": "^3.1.0",
    "nyc": "^8.3.1",
    "parker": "0.0.10",
    "poststylus": "^0.2.3",
    "rollup": "^0.36.1",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "rupture": "^0.6.1",
    "stylint": "^1.5.6",
    "stylus": "^0.54.5",
    "tape": "^4.6.2",
    "tape-watch": "^2.2.3",
    "xo": "^0.16.0"
  }
}
